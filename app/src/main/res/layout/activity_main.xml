<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="729dp"
            android:id="@+id/linearLayout" android:layout_marginTop="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:fontFamily="sans-serif"
                android:textColor="@color/black" android:text="测试app"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="IP"
                    android:ems="10"
                    android:id="@+id/et_ip" android:layout_weight="1"/>
            <Button
                    android:text="连接"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_connect" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="功能区"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:textColor="@color/black"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="code"
                    android:ems="10"
                    android:id="@+id/et_command"/>
            <Button
                    android:text="测试命令"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bt_upload"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="剪切板"
                        android:ems="10"
                        android:id="@+id/et_paste" android:layout_weight="1"/>
                <Button
                        android:text="粘贴到剪贴板"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/bt_paste" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="状态："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_info" android:textColor="@color/black"/>
            <Button
                    android:text="扫描"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bt_scan"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>